{
  "name": "sleipi/monolog2slackwebhook",
  "description": "send messages to slack webhook",
  "minimum-stability": "stable",

  "require-dev": {
    "php": ">=7.0",
    "phpunit/phpunit": "~5.5",
    "monolog/monolog": "~1.7",
    "curl/curl": "^1.4"
  },

  "suggest": {
    "monolog/monolog": "Required to send Log messages",
    "curl/curl": "Curl Wrapper used to send Slack Messages"
  },

  "autoload": {
    "psr-4": {
      "Sleipi\\Monolog2Slack\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sleipi\\Monolog2Slack\\": "tests/unit-tests"
    }
  }
}
